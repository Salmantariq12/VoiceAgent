<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VoiceAgent</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VoiceAgent.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <h1 class="text-center mt-3" style="color: #37AA9DCC;">VoiceAgent</h1>

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container justify-content-center">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link fw-bold ms-3" asp-page="/create" style="color: #37AA9DCC;">Create</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold ms-3" asp-page="/Files" style="color: #37AA9DCC;">Files</a>
                        </li>
                        <li class="nav-item">
                            <span class="nav-link fw-bold ms-3" style="color: #37AA9DCC;">Transcriber</span>
                        </li>
                        <li class="nav-item">
                            <span class="nav-link fw-bold ms-3" style="color: #37AA9DCC;">Voice</span>
                        </li>
                        <li class="nav-item">
                            <span class="nav-link fw-bold ms-3" style="color: #37AA9DCC;">Analysis</span>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container mt-5">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
